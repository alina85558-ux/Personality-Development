<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_uploadstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_mainoption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="5dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:background="@drawable/draw_bottomsheet"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/img_takephoto"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_photo_camera"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tv_uploadphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Capture"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.3"
                android:background="@drawable/draw_bottomsheet"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_takevideo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_gallery"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tv_takevideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:text="Gallery"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>