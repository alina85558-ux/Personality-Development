<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/way"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#64000000"
            tools:context="com.getitdonenow.activity.SignUp">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat = "@drawable/ic_chevron_left_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Sign In"
                    android:textColor="@color/textlightblue"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/llll"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/back"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:src="@drawable/pdlogo" />

            <LinearLayout
                android:paddingBottom="15dp"
                android:gravity="center"
                android:layout_below="@+id/llll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_35dp"
                    android:layout_marginRight="@dimen/_35dp"
                    android:background="#0000"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/textlightblue"
                    android:textColorHint="@color/textlightblue"
                    android:padding="12dp"
                    android:hint="@string/email" />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/textlightblue" />



                <TextView
                    android:id="@+id/btnFPass"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_35dp"
                    android:layout_marginRight="@dimen/_35dp"
                    android:background="@color/darkblue"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:text="@string/reset_pass"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>
