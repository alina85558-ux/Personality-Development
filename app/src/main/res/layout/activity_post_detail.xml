<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true">

        <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            style="@style/ToolBarWithNavigationBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:title="Post"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/view"
                    android:fillViewport="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="3dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp">

                                <customview.CircleImageView
                                    android:id="@+id/img_profile_pic"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_user" />

                                <TextView
                                    android:id="@+id/post_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/img_profile_pic"
                                    android:layout_toRightOf="@+id/img_profile_pic"
                                    android:gravity="start"
                                    android:paddingStart="2dp"
                                    android:paddingLeft="2dp"
                                    android:paddingTop="2dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <com.github.curioustechizen.ago.RelativeTimeTextView
                                    android:id="@+id/post_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/post_name"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/img_profile_pic"
                                    android:layout_toRightOf="@+id/img_profile_pic"
                                    android:gravity="start"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:textColor="@color/grey3"
                                    android:textSize="10sp"
                                    app:relative_time_prefix="" />

                                <ImageView
                                    android:id="@+id/img_option"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_menu_post_options" />

                                <!--            <View
                                                android:id="@+id/line"
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_below="@+id/img_profile_pic"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/Light_black1" />-->

                                <TextView
                                    android:id="@+id/post_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_profile_pic"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="7dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="start"
                                    android:padding="2dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <View
                                    android:id="@+id/line_bottom"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.3dp"
                                    android:layout_below="@+id/post_details"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/Light_black1" />

                                <LinearLayout
                                    android:id="@+id/linearLike"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/line_bottom"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <CheckedTextView
                                        android:id="@+id/likeIcon"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/like_icon"
                                        android:button="@null"
                                        android:checked="false"
                                        android:clickable="false"
                                        android:focusable="true"
                                        android:stateListAnimator="@animator/scale" />

                                    <TextView
                                        android:id="@+id/txtLikes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:clickable="false"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cardViewPost"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            tools:listitem="@layout/comment_layout_item" />

                    </RelativeLayout>
                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/replyParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    android:background="#EFEFEF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_12sdp"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/replyTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/_12ssp"
                        tools:text="Replying to @username" />

                    <ImageButton
                        android:id="@+id/closeReply"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/ic_baseline_close_24"
                        android:contentDescription="@string/closeBtn_contentDesc" />

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    app:layout_constraintBottom_toTopOf="@+id/llAddCommentView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@color/gray_border" />

                <LinearLayout
                    android:id="@+id/llAddCommentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/adView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="@color/gray_border"
                        app:civ_border_width="@dimen/_1sdp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/comment_as_username"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:lines="2"
                        android:textColorHint="#C3C3C3"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/postBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_send" />

                </LinearLayout>

                <View
                    android:id="@+id/viewBottom"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@+id/llAddCommentView"
                    app:layout_constraintTop_toBottomOf="@+id/llAddCommentView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@color/gray_border" />

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewBottom"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|bottom"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id"
                    ads:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

    </LinearLayout>

</layout>